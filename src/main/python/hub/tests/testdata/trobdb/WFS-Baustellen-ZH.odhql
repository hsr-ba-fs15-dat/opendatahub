select b.ansprechperson as userid,
       substring(concat(b.strassenname, ' ', b.gemeindename), 1, 100) as title,
       b.beschreibung as description,
       to_char(to_date(b.datum_baubeginn), '%Y-%m-%d') as trob_start,
       to_char(to_date(b.datum_bauende), '%Y-%m-%d') as trob_end,
       null as trob_interval,
       'both' as direction,
       b.verkehrsfuehrung as diversion_advice,
       'CH' as country,
       b.beschreibung as reason,
       b.strassenname as object_name,
       'street' as object_type,
       'closed' as trob_type,
       ST_SetSRID(ST_Centroid(b.geometry), 4326) as trobdb_point
  from ODH1002_baustellen_detailansicht as b